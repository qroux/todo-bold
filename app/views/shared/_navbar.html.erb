<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to "Todo-Bold", lists_path, class: "navbar-brand"%>
  <% if user_signed_in? %>
    <div class="create-list d-flex flex-start">
      <%= form_tag search_tasks_path, method: :get do %>
        <%= text_field_tag :query,
          params[:query],
          placeholder: "Retrouver une tâche"
        %>
        <%= submit_tag "Recherche", class: "btn btn-outline-success" %>
      <% end %>
    </div>
  <% end %>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to "Espace partagé", shared_lists_path, class: "nav-link" %>
      </li>

      <% if user_signed_in? %>
        <li class="nav-item dropdown">
          <div class="nav-link dropdown-toggle" data-toggle="dropdown">
            <i class="fas fa-user"></i>
          </div>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Profil", edit_user_registration_path(current_user.id), class: "dropdown-item" %>
            <%= link_to "Déconnexion", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
        <% else %>
        <li class="nav-item active">
          <%= link_to "Se connecter", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
