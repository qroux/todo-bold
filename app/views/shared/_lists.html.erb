        <li class="list-group-item"><%= task.name %></li>
      <% end %>
      <%= simple_form_for @task, html: { class: "form-inline ml-auto", url: tasks_path} do |f| %>
        <%= f.input :name, label: false, placeholder: 'Ajouter tÃ¢che'%>
